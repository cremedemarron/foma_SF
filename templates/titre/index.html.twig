{% extends 'base.html.twig' %}

{% block title %}Titre index{% endblock %}

{% block body %}
    <h1>Titre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Resume</th>
                <th>Auteur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for titre in titres %}
            <tr>
                <td>{{ titre.id }}</td>
                <td>{{ titre.Titre }}</td>
                <td>{{ titre.Resume }}</td>
                <td>{{ titre.Auteur }}</td>
                <td>
                    <a href="{{ path('titre_show', {'id': titre.id}) }}">show</a>
                    <a href="{{ path('titre_edit', {'id': titre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('titre_new') }}">Create new</a>
{% endblock %}
